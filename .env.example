# Secure CipherStegno Tool - Environment Configuration
# Copy this file to .env and configure for your deployment

# Application Settings
PORT=8000
DEBUG=False

# CORS Settings
# Comma-separated list of allowed origins for production
# Example: https://yourdomain.com,https://www.yourdomain.com
ALLOWED_ORIGINS=http://localhost:8000,http://127.0.0.1:8000

# Security Settings (IMPORTANT: Change these in production!)
SECRET_KEY=change-this-to-a-random-secret-key-in-production
JWT_SECRET_KEY=change-this-to-a-different-random-key

# Authentication (IMPORTANT: Replace with secure credentials!)
# In production, use a proper authentication system
DEMO_USERNAME=demo
DEMO_PASSWORD=demo123

# Server Configuration
WORKERS=2
LOG_LEVEL=info

# Feature Flags
ENABLE_FILE_UPLOAD=true
MAX_FILE_SIZE_MB=10
